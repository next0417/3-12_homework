
    <p id="notice"></p>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>

        <% @books.each do |book| %>
        <tr>
          <td>
          <span><%= book.title %></span>
          </td>

          <td>
          <span><%= book.body %></span>
          </td>
          <td>
            <p>
              <%= link_to "show", book_path(@book.id) %>
            </p>
          </td>
          <td>
            <p>
              <%= link_to "edit", edit_book_path %>
            </p>
          </td>
        </tr>

        <% end %>
      </tbody>
    </table>

    <h2>New Book</h2>

    <%= form_with model: Book.new do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>

      <p>Body</p>
      <%= f.text_area :body %><br>

      <%= f.submit 'Create Book' %>
    <% end %>
